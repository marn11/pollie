generator client {
  provider = "prisma-client"
  output   = "../src/generated"
  target   = "commonjs"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int       @id @default(autoincrement())
  email String @unique
  name String?
  googleId String? @unique
  polls Poll[]
}

model Poll {
  id Int @id @default(autoincrement())
  title String
  description String
  createdAt DateTime @default(now())
  options Option[]
  votes Vote[]
  isAnonymous Boolean @default(true)
  creatorId Int?
  creator User? @relation(fields: [creatorId], references: [id])
}

model Option {
  id Int @id @default(autoincrement())
  text String
  pollId Int
  poll Poll @relation(fields: [pollId], references: [id], onDelete: Cascade)
  votes Vote[]
}

model Vote {
  id Int @id @default(autoincrement())
  pollId Int
  poll Poll @relation(fields: [pollId], references: [id], onDelete: Cascade)
  optionId Int
  option Option @relation(fields: [optionId], references: [id], onDelete: Cascade)
  voterHash String // hash of user id + pollid+ secret salt from .env
  @@unique([pollId, voterHash]) // to enforce one vote per user
}